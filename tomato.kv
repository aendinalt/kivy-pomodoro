#:kivy 1.8.0

<LargeIconWidget>:
    size_hint: 0.6, 0.6
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: 'images/largeicon.png'
            size: min(self.size), min(self.size)
            pos: self.pos


<TomatoLayout>:
    id: TomatoLayout
    canvas.before:
        Color:
            rgb: 0, .33, 0
        Rectangle:
            pos: self.pos
            size: self.size

    LargeIconWidget:
        pos: root.center_x - min(self.size)/2, (root.center_y - min(self.size)/2)*1.33