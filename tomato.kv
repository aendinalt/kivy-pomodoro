#:kivy 1.8.0

<LargeIconWidget>:
    size_hint: 0.6, 0.6
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            source: 'images/largeicon.png'
            size: min(self.size), min(self.size)
            pos: self.pos

<StartButton>:
    size_hint: 0.2, 0.2
    canvas:
        Rectangle:
            source: 'images/pomo_start.png'
            pos: self.pos
            size: min(self.size), min(self.size)


<StopButton>:
    size_hint: 0.2, 0.2
    canvas:
        Rectangle:
            source: 'images/pomo_stop.png'
            pos: self.pos
            size: min(self.size), min(self.size)

<CherryGood>:
    size_hint: 0.1, 0.1
    canvas:
        Rectangle:
            source: 'images/largeicon.png'
            pos: self.pos
            size: min(self.size), min(self.size)


<TomatoLayout>:
    id: TomatoLayout
    canvas.before:
        Color:
            rgb: 0, .33, 0
        Rectangle:
            pos: self.pos
            size: self.size

    LargeIconWidget:
        pos: root.center_x - min(self.size)/2, (root.center_y - min(self.size)/2)*1.33


    StartButton:
        pos: root.size[0]*0.1, root.size[1]*0.1

    StopButton:
        pos: root.size[0]*0.9 - min(self.size), root.size[1]*0.1

    CherryGood:
        pos: root.size[0]*0.1, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size), root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*2, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*3, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*4, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*5, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*6, root.size[1]*0.95 - min(self.size)
    CherryGood:
        pos: root.size[0]*0.1 + min(self.size)*7, root.size[1]*0.95 - min(self.size)